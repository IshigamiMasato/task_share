<%= render "shared/error", obj: @reservation %>
<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag ("#{@room.image}"), class: "room-show-image" %>
      <div class="room-show-detaile">
        <div class="room-show-detaile-icon">
          <%= image_tag ("#{@user.image}"), class: "host-icon" %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name">
            <%= @room.name %>
          </p>
          <p class="room-show-profile-address">
            <%= @room.address %>
          </p>
        </div>
      </div>
      <p class="room-show-detaile-content">
        <%= @room.description %>
      </p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon mb-4">
          <%= "#{@room.price}/日" %>
        </h5>
        <div class="room-show-date-select">
          <%= form_for @reservation, url: reservations_confirm_path do |f| %>
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, class: "form-control mb-4", required: true %>
            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, class: "form-control mb-4", required: true %>
            <%= f.label :people_count, "人数" %>
            <%= f.number_field :people_count, class: "form-control mb-5", required: true %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "確認画面へ", class: "form-control btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
