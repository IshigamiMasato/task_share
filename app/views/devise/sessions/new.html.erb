<div class="container device">
  <div class="device_frame">
    <p class="my-4">ログイン</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row field">
          <div class="required-b col-2 pt-2"></div>
          <div class="col-10 px-2">
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, autocomplete: "name" %>
          </div>
        </div>
        <div class="form-group row field">
          <div class="required-b col-2 pt-2"></div>
          <div class="col-10 px-2">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "current-password" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "form-control btn-primary my-4" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
