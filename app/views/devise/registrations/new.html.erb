<div class="container device">
  <div class="device_frame">
    <p class="my-4">新しいアカウントを作成</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row field">
          <div class="required-b col-2"></div>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, autocomplete: "name", required: true %>
          </div>
        </div>
        <div class="form-group row field">
          <div class="required-b col-2"></div>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autocomplete: "email", required: true %>
          </div>
        </div>
        <div class="form-group row field">
          <div class="required-b col-2"></div>
            <% if @minimum_password_length %>
              <% @minimum_password_length %>
            <% end %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "new-password", required: true %>
          </div>
        </div>
        <div class="form-group row field">
          <div class="required-b col-2"></div>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", autocomplete: "new-password", required: true %>
          </div>
        </div>
        <div class="actions my-4">
          <%= f.submit "新しいアカウントを作成", class: "form-control btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
