<div class="container device">
  <div class="device_frame">
    <p>ログイン</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row">
          <div class="required-b"></div>
          <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field form-row">
          <div class="required-b"></div>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <% f.check_box :remember_me %>
            <% f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "form-control btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
