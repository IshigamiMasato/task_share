<div class="container-fluid reservations">
  <div class="container">
    <h4 class="pb-4">予約済みルーム一覧</h4>
    <table class="table table-striped">
      <thead>
        <tr class="border-top">
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>合計料金</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>予約確定日時</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr valign="middle">
            <td><%= link_to image_tag("#{reservation.room.image.url}", class: "room-posts-image"), "/" %></td>
            <td class="posts-name"><%= link_to "#{reservation.room.name}", "/" %></td>
            <td class="posts-contents"><%= reservation.room.description %></td>
            <td class="price-icon"><%= reservation.price %></td>
            <td><%= reservation.start_date.strftime("%Y年 %m月 %d日") %></td>
            <td><%= reservation.end_date.strftime("%Y年 %m月 %d日") %></td>
            <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
