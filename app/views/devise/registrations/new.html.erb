<div class="container device">
  <div class="device_frame">
    <p>新しいアカウントを作成</p>
    <div class="device_inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-row">
        <div class="required-b space"></div>
        <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field form-row">
        <div class="required-b"></div>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autocomplete: "email" %>
      </div>

      <div class="field form-row">
        <div class="required-b"></div>
          <% if @minimum_password_length %>
            <% @minimum_password_length %>
          <% end %>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "new-password" %>
      </div>

      <div class="field form-row">
        <div class="required-b"></div>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "form-control btn-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
