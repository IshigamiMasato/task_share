<div class="container-fluid room-posts">
<div class="container">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table class="table table-striped">
    <thead>
      <tr class="border-top">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr valign="middle">
          <td><%= link_to image_tag("#{room.image}", class: "room-posts-image"), "/" %></td>
          <td class="posts-name"><%= link_to "#{room.name}", "/" %></td>
          <td class="posts-contents"><%= room.description %></td>
          <td class="price-icon"><%= room.price %></td>
          <td><%= room.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
