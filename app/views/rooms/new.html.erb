<div class="user">
  <div class="row">
    <div class="user-nav">
      <ul>
        <li><%= link_to "基本情報", new_room_path, class: "link-edit" %></li>
      </ul>
    </div>
  </div>

  <div class="user-view">
    <div class="user-view-box">
      <div class="update-content">
        <div class="row">
          <h5>ルーム情報登録</h5>
        </div>
      </div>
      <%= form_for @room do |f| %>
        <div class="update-content">
          <div class="row">
            <%= f.label :name, "ルーム名", class: "required-a" %>
            <%= f.text_field :name, class: "form-control", placeholder: "ルーム名を入力" %>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <%= f.label :description, "ルーム紹介", class: "required-a" %>
            <%= f.text_area :description, size: "5x5", class: "form-control", placeholder: "ルーム説明を入力" %>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <%= f.label :price, "料金", class: "required-a" %>
            <%= f.text_field :price, class: "form-control", placeholder: "1日あたりの料金を入力" %>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <%= f.label :address, "住所", class: "required-a" %>
            <%= f.text_field :address, class: "form-control", placeholder: "住所を入力" %>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <%= f.label :image, "ルーム画像", class: "required-a" %>
            <%= f.file_field :image %>
          </div>
        </div>
          
        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="update-content">
          <div class="row">
            <%= f.submit "登録", class: "form-control btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
